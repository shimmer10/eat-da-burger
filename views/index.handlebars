<h1>Burgers!</h1>

<h2>Uneaten Burgers</h2>

<ul>
  {{#each burgers}}
  {{#unless devoured}}
  <p>
    {{burger_name}}
    <button class="change-devour" data-id="{{id}}">
      Devour it!
    </button>
  </p>
  {{/unless}}
  {{/each}}
</ul>

<h2>Eaten Burgers</h2>

<ul>
  {{#each burgers}}
  {{#if devoured}}
  <p>
    {{burger_name}}
    <button class="delete-burger" data-id="{{this.id}}">DELETE!</button>
  </p>
  {{/if}}
  {{/each}}
</ul>

<h2>Create a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>